{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "vite.config.mts"],
      "outputs": ["build/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check:types": {
      "inputs": ["src/**"]
    },
    "release": {
      "cache": false
    }
  }
}
