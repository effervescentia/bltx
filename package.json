{
  "name": "bltx",
  "private": true,
  "workspaces": [
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "biome check --use-editorconfig true",
    "check:types": "turbo run check:types",
    "dev": "turbo run dev",
    "format": "biome format --write --use-editorconfig true",
    "release": "turbo run --concurrency=1 release",
    "plop": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",

    "pkg:release": "semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@tsconfig/bun": "1.0.7",
    "@types/bun": "1.1.14",
    "semantic-release": "24.2.7",
    "semantic-release-monorepo": "8.0.2",
    "tsx": "4.19.4",
    "turbo": "2.5.2",
    "typescript": "5.7.2"
  },
  "packageManager": "bun@1.2.19"
}
